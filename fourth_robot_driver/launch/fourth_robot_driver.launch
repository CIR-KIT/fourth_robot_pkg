<launch>
  <!-- Yp-Spur Coodinator -->
  <node pkg="ypspur_ros_bridge" type="ypspur-coordinator.sh" name="ypspur_coordinator" args="-p $(find fourth_robot_driver)/ypspur_params/fourth_robot.param -d $(optenv robodev /dev/serial/by-id/usb-T-frog_project_T-frog_Driver-if00) --reconnect" output="screen" />

  <!--  YPSPUR_ROS_BRIDGE -->
  <!-- If ypspur_ros_bridge is launched before ypspur-coordinator initialize, it does not work. Therefore wait for it: -->
  <node pkg="ypspur_ros_bridge" type="wait_and_ypspur_ros_bridge.sh" name="ypspur_ros_bridge"/>
</launch>
